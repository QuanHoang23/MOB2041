<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@color/card_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header với mã phiếu mượn và ngày -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <TextView
                android:id="@+id/txtMaPhieuMuon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PM001"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/primary"
                android:background="@drawable/badge_background"
                android:padding="8dp"
                android:layout_marginEnd="12dp"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtNgayMuon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ngày mượn: 20/7/2025"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary"/>

                <TextView
                    android:id="@+id/txtNgayTra"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ngày trả: 27/7/2025"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Thông tin người mượn -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@mipmap/ic_launcher"
                android:background="@drawable/circle_background"
                android:padding="4dp"
                android:layout_marginEnd="12dp"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtTenNguoiMuon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Phan Hoàng Quân"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"/>

                <TextView
                    android:id="@+id/txtSDTNguoiMuon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0325488221"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Danh sách sách -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sách mượn:"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:layout_marginBottom="8dp"/>

        <LinearLayout
            android:id="@+id/linearDanhSachSach"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="12dp">
            <!-- Sẽ được populate động từ code -->
        </LinearLayout>

        <!-- Tổng kết -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@color/primary_light"
            android:padding="12dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tổng:"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:layout_marginEnd="8dp"/>

            <TextView
                android:id="@+id/txtTongSoSach"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3 cuốn"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/success"
                android:layout_marginEnd="16dp"/>

            <TextView
                android:id="@+id/txtTongTien"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="45,000 VNĐ"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/success"
                android:gravity="end"/>
        </LinearLayout>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end">

            <ImageView
                android:id="@+id/ivEdit"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_edit"
                android:background="@drawable/icon_button_background"
                android:padding="8dp"
                android:layout_marginEnd="8dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackgroundBorderless"/>

            <ImageView
                android:id="@+id/ivDel"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_delete"
                android:background="@drawable/icon_button_background_delete"
                android:padding="8dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackgroundBorderless"/>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
