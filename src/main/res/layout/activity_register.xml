<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Header Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginBottom="32dp">
            
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@mipmap/ic_launcher"
                android:layout_marginBottom="20dp"/>
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ĐĂNG KÝ TÀI KHOẢN"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="8dp"/>
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tạo tài khoản mới để sử dụng hệ thống"
                android:textSize="16sp"
                android:textColor="@color/text_secondary"
                android:gravity="center"/>
        </LinearLayout>

        <!-- Registration Form Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/card_background"
            android:padding="24dp"
            android:elevation="8dp">

            <!-- Username Input -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tên đăng nhập"
                android:textSize="16sp"
                android:textColor="@color/text_primary"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"/>

            <EditText
                android:id="@+id/edtUser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nhập tên đăng nhập"
                android:layout_marginBottom="16dp"
                android:background="@drawable/edittext_modern"
                android:textSize="16sp"
                android:textColor="@color/text_primary"
                android:textColorHint="@color/text_hint"
                android:inputType="text"
                android:padding="16dp"/>

            <!-- Password Input -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mật khẩu"
                android:textSize="16sp"
                android:textColor="@color/text_primary"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"/>

            <EditText
                android:id="@+id/edtPass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nhập mật khẩu"
                android:layout_marginBottom="16dp"
                android:background="@drawable/edittext_modern"
                android:textSize="16sp"
                android:textColor="@color/text_primary"
                android:textColorHint="@color/text_hint"
                android:inputType="textPassword"
                android:padding="16dp"/>

            <!-- Confirm Password Input -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Xác nhận mật khẩu"
                android:textSize="16sp"
                android:textColor="@color/text_primary"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"/>

            <EditText
                android:id="@+id/edtRePass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nhập lại mật khẩu"
                android:layout_marginBottom="16dp"
                android:background="@drawable/edittext_modern"
                android:textSize="16sp"
                android:textColor="@color/text_primary"
                android:textColorHint="@color/text_hint"
                android:inputType="textPassword"
                android:padding="16dp"/>

            <!-- Full Name Input -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Họ và tên"
                android:textSize="16sp"
                android:textColor="@color/text_primary"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"/>

            <EditText
                android:id="@+id/edtName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nhập họ và tên đầy đủ"
                android:layout_marginBottom="16dp"
                android:background="@drawable/edittext_modern"
                android:textSize="16sp"
                android:textColor="@color/text_primary"
                android:textColorHint="@color/text_hint"
                android:inputType="textPersonName"
                android:padding="16dp"/>

            <!-- Phone Input -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Số điện thoại"
                android:textSize="16sp"
                android:textColor="@color/text_primary"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"/>

            <EditText
                android:id="@+id/edtPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nhập số điện thoại"
                android:layout_marginBottom="16dp"
                android:background="@drawable/edittext_modern"
                android:textSize="16sp"
                android:textColor="@color/text_primary"
                android:textColorHint="@color/text_hint"
                android:inputType="phone"
                android:padding="16dp"/>

            <!-- Address Input -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Địa chỉ"
                android:textSize="16sp"
                android:textColor="@color/text_primary"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"/>

            <EditText
                android:id="@+id/edtAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nhập địa chỉ"
                android:layout_marginBottom="24dp"
                android:background="@drawable/edittext_modern"
                android:textSize="16sp"
                android:textColor="@color/text_primary"
                android:textColorHint="@color/text_hint"
                android:inputType="textPostalAddress"
                android:padding="16dp"/>

            <!-- Register Button -->
            <Button
                android:id="@+id/btnRegister"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="ĐĂNG KÝ"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:background="@drawable/button_primary"
                android:layout_marginBottom="16dp"
                android:textAllCaps="false"
                app:backgroundTint="@null"/>

            <!-- Back Button -->
            <Button
                android:id="@+id/btnBack"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="TRỞ VỀ"
                android:textColor="@color/text_primary"
                android:textSize="16sp"
                android:textStyle="bold"
                android:background="@drawable/button_secondary"
                android:textAllCaps="false"
                app:backgroundTint="@null"/>

        </LinearLayout>

        <!-- Footer -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="© 2024 Thư viện số. All rights reserved."
            android:textSize="12sp"
            android:textColor="@color/text_secondary"
            android:layout_marginTop="24dp"
            android:gravity="center"/>

    </LinearLayout>
</ScrollView>